# Recipe Executor App Example Environment Variables
# Copy this file to .env and modify as needed

# App settings
RECIPE_APP_APP_TITLE="Recipe Executor"
RECIPE_APP_APP_DESCRIPTION="A web interface for executing and creating recipes"
RECIPE_APP_DEBUG=false

# Server settings
RECIPE_APP_HOST=0.0.0.0
RECIPE_APP_PORT=7861

# MCP settings
RECIPE_APP_MCP_SERVER=true

# Recipe executor settings
RECIPE_APP_RECIPE_CREATOR_PATH="recipes/recipe_creator/create.json"
RECIPE_APP_LOG_DIR="logs"

# Theme settings
RECIPE_APP_THEME="soft"  # Use "default", "soft", "glass", etc.